@model IEnumerable<Inventario.GUI.Models.Parametros.ModeloSede>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Sedes</h2>
@{int contador = 1; }
<p>
    @Html.ActionLink("Crear Sede", "Create", new { }, new { @class = "btn btn-success" })
</p>
<form method="get" action=@Url.Action("Index", "Sede" )>
    <div class="form-group">
        @Html.TextBox("filtro", null, new
        {
            placeholder = "Filtrar búsqueda",
                                @class = "form-control"
        })

    </div>
    <button class="btn btn-info" type="submit">Filtrar</button>
</form>
<table class="table">
    <tr>
        <th>Nº</th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@contador</td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        contador++;
    }

</table>
@Html.Partial("_Footer_pageList")