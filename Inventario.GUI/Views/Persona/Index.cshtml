@model IEnumerable<Inventario.GUI.Models.Parametros.ModeloPersona>

@{
    ViewBag.Title = "Index";
}

<h2>Lista De Persona</h2>
@{int contador = 1; }
<p>
    @Html.ActionLink("Crear Persona", "Create", new { }, new { @class = "btn btn-success" })
</p>
<form method="get" action=@Url.Action("Index", "Persona" )>
    <div class="form-group">
        @Html.TextBox("filtro", null, new
        {
            placeholder = "Filtrar búsqueda",
                                @class = "form-control"
        })

    </div>
    <button class="btn btn-info" type="submit">Filtrar</button>
</form>
<table class="table">
    <tr>
        <th>Nº</th>
        <th>
            @Html.DisplayNameFor(model => model.Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Celular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@contador</td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.Correo)
            </th>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        contador++;
    }

</table>
@Html.Partial("_Footer_pageList")
