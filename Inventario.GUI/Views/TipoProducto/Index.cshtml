@model IEnumerable<Inventario.GUI.Models.Parametros.ModeloTipoProducto>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Tipo Producto</h2>
@{int contador = 1; }
<p>
    @Html.ActionLink("Crear Tipo Producto", "Create", new { }, new { @class = "btn btn-success" })
</p>
<input type="text" name="txtFiltro" id="txtFiltro" />
<button type="submit" class="btn btn-info "> Filtrar</button>
<table class="table">
    <tr>
        <th>Nº</th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
             <td>@contador</td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        contador++;
    }

</table>
@Html.Partial("_Footer_pageList")